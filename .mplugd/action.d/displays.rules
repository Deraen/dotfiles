[rule dock_startup]
on_type=Startup
if_output_DP2_connected=1
if_output_DP3_connected=1
if_output_DP2_width!=1200
if_output_DP3_width!=2560

true_exec=xrandr --output DP2 --mode 1920x1200 --rotate left
true_exec=xrandr --output LVDS1 --off
true_exec=xrandr --output DP3 --mode 2560x1440 --primary --right-of DP2

[rule docked]
on_type=OutputChangeNotify
on_name=DP3
if_output_LVDS1_crtc!=0
if_output_DP2_connected=1
if_output_DP3_connected=1
if_output_DP2_crtc=0
if_output_DP3_crtc=0

true_exec=xrandr --output DP2 --mode 1920x1200 --rotate left
true_exec=xrandr --output LVDS1 --off
true_exec=xrandr --output DP3 --mode 2560x1440 --primary --right-of DP2

[rule undocked]
on_type=OutputChangeNotify
on_name=DP3
if_output_LVDS1_crtc=0
if_output_LVDS1_connected=1
if_output_DP2_connected=0
if_output_DP3_connected=0
if_output_DP2_crtc!=0
if_output_DP3_crtc!=0

true_exec=xrandr --output DP3 --off
true_exec=xrandr --output LVDS1 --auto --primary
true_exec=xrandr --output DP2 --off

[rule work_connect]
on_type*=(OutputChangeNotify|Startup)
if_output_DP1_connected=1

true_exec=xrandr --output DP1 --mode 2560x1440 --primary --left-of LVDS1

[rule work_disconnect]
on_type=OutputChangeNotify
on_name=DP1
on_connected=0

true_exec=xrandr --output DP1 --off

[rule on_desktop]
on_type=Startup
if_output_DVI-I-3_connected=1
if_output_DVI-I-2_connected=1

true_exec=xrandr --output DVI-I-3 --rotate left
true_exec=xrandr --output DVI-I-2 --right-of DVI-I-3 --primary