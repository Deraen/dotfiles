#!/bin/bash

usage() {
  echo "Usage: $0 [-h|--help] [number of terminals] [--] [ARGS TO TERMINAL APP...]"
  exit
}

POSITIONAL=()
while [[ $# -gt 0 ]]; do
  key="$1"

  case $key in
    --)
      while [[ $# -gt 0 ]]; do
        POSITIONAL+=("$1")
        shift
      done
      ;;
    -h|--help)
      usage
      ;;
    *)
      POSITIONAL+=("$1")
      shift
      ;;
  esac
done

set -- "${POSITIONAL[@]}" # restore positional parameters

N=
if [[ -n $1 ]]; then
  if [[ $1 =~ ^[0-9]+$ ]]; then
    N=$1
  fi
fi
shift

if [[ -n $N ]]; then
  for i in $(seq 1 "$N"); do
    $0 -- "$@" &> /dev/null &
  done
else
  if command -v alacritty &> /dev/null; then
    alacritty "$@" &
  else
    urxvt.sh "$@" &
  fi
fi
